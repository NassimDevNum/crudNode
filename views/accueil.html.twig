{% extends "base.html.twig" %}

{% block titre %}Accueil{% endblock %}

{% block contenu %}
<h1>Liste de tous les livres</h1>

{% if message %}
  <div class="alert alert-{{ message.type }}">
    {{ message.contenu }}
  </div>
{% endif %}

<table class="table text-center">
  <thead>
    <tr>
      <th>Image</th>
      <th>Titre</th>
      <th>Auteur</th>
      <th>Pages</th>
    </tr>
  </thead>
  <tbody>
    {% for livre in livres %}
      <tr>
        <td>
          {% if livre.image %}
            <img src="{{ livre.image }}" alt="{{ livre.nom }}" width="100">
          {% else %}
            <span>Pas d'image</span>
          {% endif %}
        </td>
        <td>{{ livre.nom }}</td>
        <td>{{ livre.auteur }}</td>
        <td>{{ livre.pages }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
